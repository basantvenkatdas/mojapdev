<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->

    <RelativeLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@android:color/holo_orange_dark"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">


        <ImageView
            android:id="@+id/profileview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:src="@drawable/profile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/totalMalaCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:text="COUNT Malas : All Time" />

        <TextView
            android:id="@+id/todayMalaCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/totalMalaCount"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:text="COUNT Malas : Today" />

        <ImageView
            android:id="@+id/historview1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:src="@drawable/chart_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />

        <RelativeLayout
            android:id="@+id/centerView"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/beadstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:text="Beads today"
                android:layout_margin="10dp"
                />

            <RelativeLayout
                android:id="@+id/malaCountdup"
                android:layout_below="@id/beadstext"
                android:layout_width="154dp"
                android:layout_centerHorizontal="true"
                android:layout_height="154dp"
                android:background="@drawable/circleshape_1"
                />


            <RelativeLayout
                android:id="@+id/malaCount"
                android:layout_below="@id/beadstext"
                android:layout_marginTop="2dp"
                android:layout_width="150dp"
                android:layout_centerHorizontal="true"
                android:layout_height="150dp"
                android:background="@drawable/circleshape"
                >

                <TextView
                    android:id="@+id/malaCounttextview"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="50dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="108" />
            </RelativeLayout>

           <!-- <TextView
                android:id="@+id/todaymalacounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:layout_below="@id/malaCount"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:text="2 Malas Today" />-->


            <ImageView
                android:id="@+id/mojapinfo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                android:src="@drawable/info"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/malaCount"
                android:layout_toRightOf="@id/malaCount"
                />

        </RelativeLayout>

       <!-- <Button
            android:id="@+id/resetbutton"
            android:layout_width="wrap_content"
            android:text="Reset"
            android:padding="10dp"
            android:textSize="20dp"
            android:background="@drawable/button_selector"
            android:layout_above="@id/centerView"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />-->





        <ImageView
            android:id="@+id/beadimageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:src="@drawable/app_icon"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/mantraview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            android:text="@string/mantra"
            android:layout_above="@id/beadimageview"
            />

        <TextView
            android:id="@+id/mantraview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            android:text="@string/mantra"
            android:layout_above="@id/beadimageview"
            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/transparent"
        android:background="#ffffff"/>
</android.support.v4.widget.DrawerLayout>